    <style>
        table,th,td{
            border:2px solid black;
            border-collapse: collapse;
            align-content: center;
            margin-left: 60px;
            margin-top: 60px;
            margin-right: 70px;
        }
        * {
            box-sizing: border-box;
        }

        body {
            background-color: antiquewhite;
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .header {
            padding: 60px;
            text-align: center;
            background: plum;
            color: black;
            font-family: Cambria;
        }
         .registerbtn {
            background-color: #aa3e04;
            color: white;
            padding:20px;
            margin:8px;
            border: none;
            cursor: pointer;
            width:6%;
            
            margin-left:20px;

            opacity: 0.9;
        }

        .registerbtn:hover {
            opacity: 1;
        }

      
    </style>
</head>
<body>
  <div class="header">
    <h1>BaKe ND CaKe</h1>
  </div>
    <table>
      <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">cake flavour</th>
            <th scope="col">phone</th>
            
        </tr>
      </thead>
      <tbody>
        {{#data}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{cake}}</td>
            <td>{{phone}}</td>
        </tr>
        {{/data}}
      </tbody>
    </table >
    <button type="button" class="registerbtn">close</button>
    <button type="button"class="registerbtn">save</button><br>
    <a href="./"style="color:darkolivegreen">back to home page</a><br>
